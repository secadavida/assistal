{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.py",  # Ajusta la ruta de tu archivo principal
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",  # Si tienes un frontend en Node.js o React
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/index.py"
    }
  ]
}

